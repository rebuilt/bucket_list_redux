<main>
  <div class="content-wrapper">
    <h1>Create new idea</h1>
    <%=  form_with(url: ideas_path, method: :post, class: 'form--inpage') do  %>
      <div class="input-group input-group--horizontal">
        <%= label_tag("title", "Title", class: "input-group__label" )  %>
        <%= text_field_tag("title", "", placeholder: "E.g. Ride a camel", class: "input-group__field" )  %>
      </div>

      <div class="input-group input-group--horizontal">
        <%= label_tag("photo_url", "Photo URL", class: "input-group__label" )  %>
        <%= text_field_tag("photo_url", "", placeholder: "http://fpoimg.com/255x170", class: "input-group__field" )  %>
      </div>
      <div class="prompt">
        <%= link_to("Cancel", "#cancel", class: "prompt__cancel" )  %>
        <%= button_tag("Create idea", class: "btn btn--primary prompt__confirm")  %>
      </div>

    <% end %>

  </div>
</main>
