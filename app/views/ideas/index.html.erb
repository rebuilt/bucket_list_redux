<main>
  <div class="content-wrapper">
    <h1>Results for <%= @search_term  %> </h1>
  </div>
  <div class="content-wrapper">
    <ul class="bare-list float-grid css-grid">
      <% cards = ["Go to the beach ", "be an interesting person","dance all night", "go to the lake","watch a musical", "set up a guard", "sing a song", "jump up and down", "hunt wild game", "wear a batsuit and fight crime"]  %>
      <% cards.each do |card|  %>
        <li><%= render(partial: "idea_card", locals: {img_url: "http://fpoimg.com/255x170", title: card, count: 1234})   %></li>
      <% end %>

    </ul>
  </div>
  <div class="see-more">
    <button class="btn" type="button" data-more="true">See more</button>
  </div>
</main>
