      <section class="sg-section" id="typography">
        <h3 class="beta">02. Typography</h3>
        <div class="sg-inlineblock">
          <h4>Glyph</h4>
          <p class="giga">Aa</p>
        </div>
        <div class="sg-inlineblock sg-weights">
          <h4>Weights</h4>
          <ul class="bare-list">
            <li>Regular</li>
            <li><em>Regular Italic</em></li>
            <li><strong>Bold</strong></li>
            <li><strong><em>Bold Italic</em></strong></li>
          </ul>
        </div>
        <table class="table--lines sg-typotable">
          <thead>
            <tr>
              <th>Style</th>
              <th>Desktop</th>
              <th>Tablet</th>
              <th>Mobile</th>
              <th>Line-height</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="alpha">H1 / .alpha</td>
              <td>48px</td>
              <td>40px</td>
              <td>36px</td>
              <td>1.2</td>
            </tr>
            <tr>
              <td class="beta">H2 / .beta</td>
              <td>36px</td>
              <td>32px</td>
              <td>28px</td>
              <td>1.2</td>
            </tr>
            <tr>
              <td class="gamma">H3 / .gamma</td>
              <td>28px</td>
              <td>28px</td>
              <td>24px</td>
              <td>1.2</td>
            </tr>
            <tr>
              <td class="delta">H4 / .delta</td>
              <td>13px</td>
              <td>13px</td>
              <td>13px</td>
              <td>1.5</td>
            </tr>
            <tr>
              <td class="epsilon">H5 / .epsilon</td>
              <td>14px</td>
              <td>14px</td>
              <td>14px</td>
              <td>1.4</td>
            </tr>
            <tr>
              <td class="zeta">H6 / .zeta</td>
              <td>12px</td>
              <td>12px</td>
              <td>12px</td>
              <td>1.4</td>
            </tr>
            <tr>
              <td class="sg-header-button">Action/Button</td>
              <td>13px</td>
              <td>13px</td>
              <td>13px</td>
              <td>1</td>
            </tr>
            <tr>
              <td>Paragraph text</td>
              <td>15px</td>
              <td>15px</td>
              <td>15px</td>
              <td>1.6</td>
            </tr>
          </tbody>
        </table>
      </section>
      <section class="sg-section" id="buttons">
        <h3 class="beta">03. Buttons</h3>
        <h4>Default button</h4>
        <div>
          <button class="btn" type="button">Button</button>
          <a class="btn" href="#nolink">Link Button</a>
        </div>
        <h4>Primary button</h4>
        <div>
          <button class="btn btn--primary" type="button">Primary button</button>
        </div>
        <h4>Negative button</h4>
        <div>
          <button class="btn btn--warning" type="button">Warning button</button>
        </div>
      </section>
      <section class="sg-section" id="forms">
        <h3 class="beta">04. Form Elements</h3>
        <div>
          <h4 class="gamma">Input field</h4>
          <div class="input-group input-group--horizontal">
            <label class="input-group__label" for="sg-input">Input label</label>
            <input id="sg-input" class="input-group__field" type="text" name="sg-input" placeholder="Placeholder text">
          </div>
        </div>
        <div>
          <h4 class="gamma">Text area</h4>
          <div class="input-group input-group--horizontal">
            <label class="input-group__label" for="sg-textarea">Text area label</label>
            <textarea id="sg-textarea" class="input-group__field"></textarea>
          </div>
        </div>
        <div>
          <h4 class="gamma">Validation message on 1 column form</h4>
          <div class="alert">
            Please fill out a valid email address.
            <p>Please enter name.</p>
            <ul>
              <li>Phone number missing.</li>
              <li>Postcode missing.</li>
            </ul>
          </div>
        </div>
        <div>
          <h4 class="gamma">Validation message on 2 column form</h4>
          <div class="alert alert--wide">
            Please fill out a valid email address.
            <p>Please enter name.</p>
            <ul>
              <li>Phone number missing.</li>
              <li>Postcode missing.</li>
            </ul>
          </div>
        </div>
      </section>
