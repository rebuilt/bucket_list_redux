<li>
  <div class="card">
    <div class="card__thumb">
      <a href="ideas/northern-lights.html">
        <% if idea.photo_url.present?  %>
        <img src="<%= idea.photo_url  %>" alt="Northern lights over mountain covered in snow">
      <% else  %>
        <img src="http://fpoimg.com/255x170?text=Preview" alt="Northern lights over mountain covered in snow">
      <% end %>
      </a>
      <div class="card__intro">
        <h4 class="card__title"><%= idea.title  %></h4>
        <span>75 have done this</span>
      </div>
    </div>
    <div class="card__footer">
      <button class="btn delta" type="submit">
        <svg class="icon-delete" role="presentation">
          <use href="../icons/icons-defs.svg#delete"></use>
        </svg>
        Delete
      </button>
      <a class="btn delta" href="#no-link">
        <svg class="icon-edit" role="presentation">
          <use xlink:href="../icons/icons-defs.svg#edit"></use>
        </svg>
        Edit
      </a>
      <%=  link_to("Edit", ideas_edit_path(idea), class: "btn delta", role: "presentation") %>
    </div>
  </div>
</li>
