<main>
  <section class="envelope">
    <header class="text--center">
      <h1 class="gamma">Sign up</h1>
    </header>
    <% if(@user.errors.any?) %>
      <div class="alert alert--wide">
        <%= @user.errors.full_messages.join('<br />') %>
      </div>
    <% end %>
    <%= form_for(@user) do |f| %>
      <div class="input-group">
        <%= f.label(:email, 'Email address', class: "input-group__label" )  %>
        <%= f.text_field(:email, class: 'input-group__field', placeholder: "e.g. me@epfl.ch"  )%>
      </div>
      <div class="input-group">
        <%= f.label(:password, 'Password', class: "input-group__label" )  %>
        <%= f.text_field(:password, class: 'input-group__field')%>
      </div>
      <div class="prompt">
        <%= f.submit('Sign up', class: "btn btn--primary prompt__confirm" )  %>
      </div>

    <% end %>
  </section>
</main>
