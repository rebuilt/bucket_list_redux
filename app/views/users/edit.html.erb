<main>
  <div class="content-wrapper">
    <%= render partial: 'account_navigation'  %>
    <div class="page-header">
      <h1>Account details</h1>
    </div>

    <% if(current_user.errors.any?) %>
      <div class="alert alert--wide">
        <%= current_user.errors.full_messages.join('<br />') %>
      </div>
    <% end %>
    <%= form_for(current_user, url: account_path,html: { class: "form--inpage" }) do |f| %>
      <div class="input-group input-group--horizontal">
        <%= f.label(:email, class: "input-group__label" ) %>
        <%= f.text_field(:email,class:  "input-group__field" )  %>
      </div>
      <div class="input-group input-group--horizontal">
        <%= f.label(:name, class: "input-group__label" ) %>
        <%= f.text_field(:name,class:  "input-group__field" )  %>
      </div>
      <div class="input-group input-group--horizontal">
        <%= f.label(:avatar_url, class: "input-group__label" ) %>
        <%= f.text_field(:avatar_url,class:  "input-group__field" )  %>
      </div>
      <div class="input-group input-group--horizontal">
        <%= f.select(:user, %w(registered admin), {}, class: 'input-group__field')  %>
      </div>
      <div class="input-group input-group--horizontal">
        <%= link_to('Cancel', account_path, class: 'prompt__cancel')  %>
        <%= f.submit("Update account", class: "btn btn--primary prompt__confirm")  %>
      </div>
    <% end %>
  </div>
</main>
