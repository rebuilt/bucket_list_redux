<main>
  <div class="content-wrapper">
    <%= render partial: 'account_navigation' %>
    <div class="page-header">
      <h1>My Idea</h1>
      <%= link_to("Create Ideas", new_idea_path, class: "btn")  %>
    </div>
  </div>
  <div class="content-wrapper">
    <% if @ideas.any?  %>
    <ul class="bare-list float-grid css-grid">
      <% @ideas.each do |idea|  %>
        <%= render(partial: "editable_idea_card", locals: {idea: idea})  %>
      <% end %>
    </ul>
  <% else  %>
    <p>You have not yet created any ideas!</p>
  <% end %>
  </div>
  <div class="see-more">
    <button class="btn" type="button" data-more="true">See more</button>
  </div>
</main>
