<div class="card">
  <div class="card__thumb">
    <%= link_to goal do  %>
      <% if goal.photo_url.present? && goal.photo_url != "" %>
        <img src="<%= goal.photo_url %>" alt="Northern lights over mountain covered in snow">
      <% else  %>
        <img src="http://fpoimg.com/255x170" alt="Northern lights over mountain covered in snow">
      <% end %>
      <div class="card__intro">
        <h4 class="card__title"><%= goal.title  %></h4>
        <span><%= goal.done_count %> have done this</span>
      </div>
    <% end %>
  </div>
  <div class="card__footer">
    <button class="btn delta" type="submit">
      <svg class="icon-delete" role="presentation">
        <use href="<%= asset_path('icons-defs.svg#delete')  %>"></use>
      </svg>
      Remove
    </button>
    <% if can_edit?(goal) %>
      <%= link_to(edit_idea_path(goal), class: "btn delta") do  %>
        <svg class="icon-edit" role="presentation">
          <use href="<%= asset_path('icons-defs.svg#edit')  %>"></use>
        </svg>
        Edit
      <% end %>
    <% end %>
  </div>
</div>
